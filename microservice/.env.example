# =====================================================
# Variables de entorno - Microservicio PDF
# =====================================================
#
# INSTRUCCIONES:
# 1. Copia este archivo como .env en el mismo directorio
# 2. Ajusta los valores según tu entorno
# =====================================================

# Puerto en el que corre el servicio
PORT=5000

# Host (127.0.0.1 para acceso local, 0.0.0.0 para externo)
HOST=127.0.0.1

# Modo debug (True para desarrollo, False para producción)
DEBUG=False

# DPI por defecto para renderizado de PDFs
DEFAULT_DPI=200

# Tiempo máximo de procesamiento por PDF (segundos)
TIMEOUT=30
